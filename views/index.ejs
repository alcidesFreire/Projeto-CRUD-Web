<!DOCTYPE html>
<html lang="pt-br">

<head>
    
    <title>Alcides veiculos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        /* Estilos adicionais */
        .square {
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
            height: 200px;
        }

        .square.usuario {
            background-color: blue;
        }

        .square.veiculo {
            background-color: green;
        }

        .square.dono-veiculo {
            background-color: red;
        }

        .square:hover {
            border-radius: 20%;
            cursor: pointer;
            border: solid 2px black;
        }

        /* Estilos para o botão de sair */
        .logout-button {
            background-color: transparent;
            border: none;
            color: white;
            font-size: 16px;
            cursor: pointer;
        }

        .logout-button:hover {
            color: lightgray;
        }

        .logout-icon {
            margin-right: 5px;
        }
    </style>
</head>

<body>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/index">Alcides Veículos</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">

                <li class="nav-item">
                    <span class="nav-link"> Bem-vindo, <%= username.split(' ')[0]; %> </span>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=""></a>
                </li>
                <li class="nav-item">

                    <form id="logout-form" action="/logout" method="POST" style="display: flex-box;">
                        <!-- Seus campos de formulário adicionais, se necessário -->
                        <input type="hidden" name="logout" value="true">
                        <button id="logout-button" class="logout-button">
                            <i class="logout-icon fas fa-sign-out-alt  align-items-center"></i>Sair
                        </button>
                    </form>

                   
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h1 class="text-center mt-5 mb-4">Alcides Veículos</h1>
        <form>
            <div class="row">
                <div class="col-md-4">
                    <div class="square usuario">
                        <a href="/index/usuario" class="text-white">Usuário</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="square veiculo">
                        <a href="/index/veiculo" class="text-white">Veículo</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="square dono-veiculo">
                        <a href="/index/dono" class="text-white">Dono</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script>
        const logoutButton = document.getElementById('logout-button');
        const logoutForm = document.getElementById('logout-form');

        logoutButton.addEventListener('click', (event) => {
            event.preventDefault();
            logoutForm.submit();
        });
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
