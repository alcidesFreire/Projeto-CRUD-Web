<!DOCTYPE html>
<html>
<head>
  <title>Deletar Item</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
</head>
<body>

<% const msg = '';%>

<div class="container">
  <h1>Excluir usuário <%= data.nome %></h1>
  <% if (msg) { %>
    <p><%= msg %></p>
  <% } %>

  <form action="/delete/usuario/<%= data.cod_usuario %>" method="post">
    <div class="form-group">
      <label for="confirm-delete">Tem certeza que deseja excluir o usuário <%= data.nome %>?</label>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="confirm-delete" name="confirm-delete" required>
        <label class="form-check-label" for="confirm-delete">Confirmar exclusão</label>
      </div>
    </div>
    <input type="submit" class="btn btn-danger" value="Excluir">
    <a href="/index/usuario" class="btn btn-secondary">Cancelar</a>
  </form>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
